<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">Report Details</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9"><%= @report.title %></dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9"><%= @report.description %></dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9"><%= @report.category %></dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-<%= @report.status == 'published' ? 'success' : 'secondary' %> text-capitalize">
                        <%= @report.status %>
                    </span>
                </dd>

                <dt class="col-sm-3">Published On:</dt>
                <dd class="col-sm-9"><%= @report.published_on %></dd>

                <dt class="col-sm-3">Created By:</dt>
                <dd class="col-sm-9"><%= @report.user.email %></dd>

                <dt class="col-sm-3">Logo:</dt>
                <dd class="col-sm-9">
                    <% if @report.logo.attached? %>
                    <%= image_tag url_for(@report.logo), class: "img-fluid img-thumbnail", style: "max-width: 200px;" %>
                    <% else %>
                    <span class="text-muted">No Logo Available</span>
                    <% end %>
                </dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <%= link_to 'Edit', edit_report_path(@report), class: 'btn btn-warning me-2' %>
            <%= link_to 'Back to Reports', reports_path, class: 'btn btn-secondary' %>
        </div>
    </div>
</div>