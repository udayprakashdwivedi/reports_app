<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"> <%= report.new_record? ? "New Report" : "Edit Report" %></h4>
        </div>

        <div class="card-body">
            <%= form_with(model: report, local: true, html: { multipart: true }) do |form| %>
            <div class="mb-3">
                <%= form.label :title, class: "form-label" %>
                <%= form.text_field :title, class: "form-control", placeholder: "Enter report title" %>
            </div>

            <div class="mb-3">
                <%= form.label :description, class: "form-label" %>
                <%= form.text_area :description, class: "form-control", id: "description-field", rows: 4, placeholder: "Enter report description" %>
                <small class="text-muted"><span id="desc-count">0</span> characters</small>
            </div>

            <div class="mb-3">
                <%= form.label :category, class: "form-label" %>
                <%= form.text_field :category, class: "form-control", placeholder: "E.g. Finance, Tech" %>
            </div>

            <div class="mb-3">
                <%= form.label :status, class: "form-label" %>
                <%= form.select :status, Report.statuses.keys.map { |s| [s.titleize, s] }, { include_blank: "Select Status" }, class: "form-select" %>
            </div>

            <div class="mb-3">
                <%= form.label :published_on, class: "form-label" %>
                <%= form.date_select :published_on, {}, class: "form-control" %>
            </div>

            <div class="mb-4">
                <%= form.label :logo, class: "form-label" %>
                <%= form.file_field :logo, class: "form-control" %>
            </div>

            <%= form.submit (report.new_record? ? "Create Report" : "Update Report"), class: "btn btn-success w-100" %>
            <% end %>
        </div>
    </div>
</div>