<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Login</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

        <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>

        <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <div class="input-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password-field", required: true %>
                <span class="input-group-text" id="toggle-password" style="cursor: pointer;">
                    <i class="bi bi-eye-slash" id="eye-icon"></i>
                </span>
            </div>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
        </div>
        <% end %>

        <div class="d-grid mb-3">
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>

        <div class="text-center">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>